---
import Header from "../components/Header.astro"
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<footer>
			&copy; Gerard Gallego, 2023
		</footer>
	</body>
</html>
<style>
	body {
		display: flex;
		flex-direction: column;
	}
	main {
		display: flex;
		flex-direction: column;
	}
	footer {
		margin-top: 1em;
		font-size: 85%;
		color: grey;
		border-top: 1px solid rgb(131, 131, 131);
		padding: 0.5em 0;
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: center;
	}
</style>
